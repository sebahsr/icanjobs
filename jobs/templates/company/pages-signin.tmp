<!doctype html>
<html class="fixed">
	{% include 'company/admin.header.tmp' %}

	
	<body>
		<div class="row">
			
			<!-- start: page -->
			<section class=" body-sign">
				<div class="center-sign">
					<a href="/" class="logo pull-left">
						<img src="/static/img/logo.png" height="54" alt="Porto Admin" />
					</a>

					<div class="panel panel-sign">
						<div class="panel-title-sign mt-xl text-right">
							<a href='/login/'><h2 class="title text-uppercase  m-none"><i class="fa fa-user mr-xs"></i> Job Seeker Sign In</h2></a>
							<h2 class="title text-uppercase  active m-none"><i class="fa fa-user mr-xs"></i> Employer Sign In</h2>
							
						</div>
						<div class="panel-body">
							<div style="color:#333" class="h2">Log in as Employer</div>


							{% if err %}
								<div class="alert alert-danger">
									<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
									<strong>Faild to login!</strong> Please Try again.
								</div>
							{% endif %}
							{% if next_url %}
							<form action="/company/admin/login/?next={{next_url}}" method="post">
							{% else %}
							<form action="/company/admin/login/" method="post">
	
							{% endif %}								{% csrf_token %}
								<div class="form-group mb-lg">
									<label>Username</label>
									<div class="input-group input-group-icon">
										
										<input name="username" type="text" placeholder="Username" autocomplete="off" class="form-control input-lg" />
										<span class="input-group-addon">
											<span class="icon icon-lg">
												<i class="fa fa-user"></i>
											</span>
										</span>
									</div>
								</div>

								<div class="form-group mb-lg">
									
									<div class="input-group input-group-icon">
										<input name="pwd" placeholder="Password" type="password" class="form-control input-lg" />
										<span class="input-group-addon">
											<span class="icon icon-lg">
												<i class="fa fa-lock"></i>
											</span>
										</span>
									</div>
								</div>

								<div class="row">
									<div class="col-sm-6">
										<div class="checkbox-custom checkbox-default">
											<input id="RememberMe" name="rememberme" type="checkbox"/>
											<label for="RememberMe">Remember Me</label>
										</div>
									</div>
									<div class="col-sm-6">
										<div class="checkbox-custom checkbox-default mb-xs ml-lg mr-lg">
											<a href='#'>Forgot Password?</a>
										</div>
									</div>
									
									<div class="col-sm-12 text-right">
										<button type="submit" class=" btn btn-primary btn-block mt-lg">Sign In</button>
									</div>
								</div>

							
								<span class="mt-lg mb-lg line-thru text-center text-uppercase">
									<span>or</span>
								</span>


								<p class="text-center h4">New to iCAN? <a href="/company/admin/signup/">Join us today.</a>							

							</form>
						</div>
					</div>

					<p class="text-center text-muted mt-md mb-md">iCan &copy; Copyright 2018. All rights reserved.</p>
				</div>
			</section>
		</div>
		
	{% include 'company/admin.footer.tmp' %}