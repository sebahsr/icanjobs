	<!DOCTYPE html>
	<html lang="zxx" class="no-js">
	<head>
		<!-- Mobile Specific Meta -->
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Favicon-->
		<link rel="shortcut icon" href="img/fav.png">
		<!-- Author Meta -->
		<meta name="author" content="codepixer">
		<!-- Meta Description -->
		<meta name="description" content="">
		<!-- Meta Keyword -->
		<meta name="keywords" content="">
		<!-- meta character set -->
		<meta charset="UTF-8">
		<!-- Site Title -->
		<title>Job Listing</title>

		<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
			<!--
			CSS
			============================================= -->
			<link rel="stylesheet" href="/static/css/linearicons.css">
			<link rel="stylesheet" href="/static/css/font-awesome.min.css">
			<link rel="stylesheet" href="/static/css/bootstrap.css">
			<link rel="stylesheet" href="/static/css/magnific-popup.css">
			<link rel="stylesheet" href="/static/css/nice-select.css">					
			<link rel="stylesheet" href="/static/css/animate.min.css">
			<link rel="stylesheet" href="/static/css/owl.carousel.css">
			<link rel="stylesheet" href="/static/css/main.css">
		</head>
		<body>

			  {% include 'header.tmp' %}

			<!-- start banner Area -->
			<section class="banner-area banner-area-blog relative" id="home">	
				<div class="overlay overlay-bg"></div>
				<div class="container">
					<div class="row d-flex align-items-center justify-content-center">
						<div class="about-content col-lg-12">
							<h1 class="text-white">
								Blog Posts				
							</h1>	
							<p class="text-white link-nav"><a href="/jobs/">Home </a>  <span class="lnr lnr-arrow-right"></span>  <a href=""> Blog Posts</a></p>
						</div>											
					</div>
				</div>
			</section>
			<!-- End banner Area -->	
			
			<!-- Start blog-posts Area -->
			<section class="blog-posts-area section-gap">
				<div class="container">
					<div class="row">
						<div class="col-lg-8 post-list blog-post-list">
							{% for blog in blogs %}
							<div class="single-post">
								<img class="img-fluid" src="{{ blog.image.url }}" alt="">
								<ul class="tags">
									{% for blog_category in blog.categories.all %}
										<li><a href="#">{{ blog_category }}, </a></li>
									{% endfor %}
									
								</ul>
								<a href="/blogs/blog-{{ blog.pk }}/">
									<h1>
										{{ blog.title }}
									</h1>
								</a>
									<p>
										{{ blog.content|striptags|truncatechars:300}}
									</p>
							</div>	
							{% endfor %}
							{% if current_page.has_previous %}
							<a href="?page={{ current_page.previous_page_number }}" class="genric-btn info-border circle arrow">Previous<span class="lnr lnr-arrow-left"></span></a>
							{% endif %}

							{% if current_page.has_next %}
								<a href="?page={{ current_page.next_page_number }}" class="genric-btn info-border circle arrow">Next<span class="lnr lnr-arrow-right"></span></a>
							{% endif %}																				
						</div>
						{% include 'blog_sidebar.tmp' %}
					</div>
				</div>	
			</section>
			<!-- End blog-posts Area -->
			
			{% include 'footer.tmp' %}	
		</body>
	</html>
