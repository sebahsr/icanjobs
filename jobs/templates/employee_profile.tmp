<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="codepixer">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Job Listing</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
		<!--
		CSS
		============================================= -->
		<link rel="stylesheet" href="/static/css/linearicons.css">
		<link rel="stylesheet" href="/static/css/font-awesome.min.css">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/magnific-popup.css">
		<link rel="stylesheet" href="/static/css/nice-select.css">					
		<link rel="stylesheet" href="/static/css/animate.min.css">
		<link rel="stylesheet" href="/static/css/owl.carousel.css">
		<link rel="stylesheet" href="/static/css/main.css">
	</head>
	<body>

		{% include 'header.tmp' %}

		<!-- start banner Area -->
		<section class="banner-area relative" id="home">	
			<div class="overlay overlay-bg"></div>
			<div class="container">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="about-content col-lg-12">
						<h1 class="text-white">
							{{ employee.user.first_name }} {{ employee.user.last_name }}				
						</h1>	
						<p class="text-white link-nav"><a href="/jobs/">Home </a>  <span class="lnr lnr-arrow-right"></span>  {{ employee.user.first_name|title }} {{ employee.user.last_name|title }}</a></p>
					</div>											
				</div>
			</div>
		</section>
		<!-- End banner Area -->	
			
		<!-- Start post Area -->
		<section class="post-area section-gap">
			<div class="container">
				<div class="row justify-content-center d-flex">
					<div class="col-lg-8 post-list">
						<div class="single-post d-flex flex-row">
							<div class="thumb col-sm-4">
								<img style="max-width:100px" src="{{ employee.profile_pic.url }}" alt="">
								<br /><br />
								<h5>{{ employee.user.first_name|title}} {{ employee.user.last_name|title}}</h5>
								<p class="address"><span class="fa fa-envelope"></span> {{ employee.user.email }}</p>
								<p class="address"><span class="fa fa-phone"></span> {{ employee.phone }}</p>

							</div>
							<div class="details col-sm-8">
								<div class="title d-flex flex-row justify-content-between">
									<div class="titles">
										<a href="#"><h4>Employee Profile</h4></a>					
									</div>
									
								</div>

                                <p>Region : {{ employee.region.name }}</p>
                                <p>City : {{ employee.city }}</p>
                                <p>School Level : {{ employee.school_level }}</p>
                                
							</div>
						</div>	
						{% if matching_jobs %}
						<!-- Start post Area -->
						<section class="post-area section-gap">
								<div id='company-job-list' class="container">
									<div class="row justify-content-center d-flex">
										<div class="col-lg-12 post-list">
										
										<h4 class="single-title"> Recommended Jobs</h4>
											<div class="row">
											{% for matching_job in matching_jobs %}
												<div style="margin-bottom : 20px" class="col-sm-6 single-rated">
														<img class="img-fluid" src="{{ matching_job.company.profile_pic.url }}" alt="">
														<hr />
														<a href="/jobs/job-{{ matching_job.pk }}"><h4>{{ matching_job.title }}</h4></a>
														<hr />
														<h6> <a href='/companies/company-{{ matching_job.company.id }}/'>{{ matching_job.company.name }} </a></h6>
														<hr />
														<p>
																{{ matching_job.summary|truncatechars:100}}
														</p>
														<p class="address">Job Nature: {{ matching_job.employement_type.name }}</p>
														<p class="address"><span class="lnr lnr-map"></span> Position : {{ matching_job.position }} </p>
														<p class="address"><span class="lnr lnr-database"></span> Region :  {{ matching_job.region }}</p>
														<a href="/jobs/job-{{ matching_job.pk }}/" class="genric-btn primary  text-uppercase">View Detail</a>
												</div>
												{% empty %}
												<div class="h3">
													No Jobs Found
												</div>
												{% endfor %}
											</div>
										
										
					
										
									</div>
								</div>	
							</section>
							<!-- End post Area -->
							{% endif %}

						<!-- Start post Area -->
						<section class="post-area section-gap">
								<div id='company-job-list' class="container">
									<div class="row justify-content-center d-flex">
										<div class="col-lg-12 post-list">

										<h4 class="single-title"> Jobs Applied To</h4>
										
											{% for applied_Job in open_applied_jobs %}
												<div class="single-post d-flex flex-row">
													
													<div class="details col-sm-12 col-sm-offset-1">
														<div class="title d-flex flex-row justify-content-between">
															<div class="titles">
																<a href="/jobs/job-{{ applied_Job.id }}/"><h4>{{ applied_Job.title }}</h4></a>
																<h6> <a href='/companies/company-{{ applied_Job.company.pk }}/'>{{ applied_Job.company.name }} </a></h6>					
															</div>
															<ul class="btns">
																
																<li><a href="/jobs/job-{{ applied_Job.id }}/"> <span class="lnr lnr-eye"></span> View Detail</a></li>
															</ul>
														</div>
														<p>
															<span class="fa fa-star"></span> Region : <a href='/jobs/region-{{ job.region.id }}/'>{{ applied_Job.region.name }}</a>
														</p>
														
														<p class="address"><span class="fa fa-user-plus"></span> {{ applied_Job.position}}</p>
														<p class="address"> {{ applied_Job.summary|truncatechars:300 }}</p>
														<div class="thumb">
															<ul class="tags">
																{% for category in job.categories.all %}
																	<li>
																		<a href="/jobs/category-{{ job.id }}/">{{ category.name }}</a>
																	</li>
																{% endfor %}
															</ul>
														</div>
													</div>
												</div>	
											{% empty %}
											<div class="h3">
												No Jobs Found
											</div>
											{% endfor %}
											{% if current_page.has_previous %}
											<a href="?page={{ current_page.previous_page_number }}" class="genric-btn info-border circle arrow">Previous<span class="lnr lnr-arrow-left"></span></a>
											{% endif %}
					
											{% if current_page.has_next %}
												<a href="?page={{ current_page.next_page_number }}" class="genric-btn info-border circle arrow">Next<span class="lnr lnr-arrow-right"></span></a>
											{% endif %}
											</div>
										
					
										
									</div>
								</div>	
							</section>
							<!-- End post Area -->
																				
					</div>
					<!-- sidebar -->
						{% include 'company_sidebar.tmp' %}
					<!-- End side bar -->
				</div>
			</div>	
		</section>
		<!-- End post Area -->


        <!-- Start callto-action Area -->
        {%  include 'join_us_section.tmp' %}

		<!-- End calto-action Area -->

	{% include 'footer.tmp' %}	
	</body>
</html>



