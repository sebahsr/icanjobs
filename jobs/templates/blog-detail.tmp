	<!DOCTYPE html>
	<html lang="zxx" class="no-js">
	<head>
		<!-- Mobile Specific Meta -->
		<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
		<!-- Favicon-->
		<link rel="shortcut icon" href="/static/img/favicon.png">
		<!-- Author Meta -->
		<meta name="author" content="codepixer">
		<!-- Meta Description -->
		<meta name="description" content="">
		<!-- Meta Keyword -->
		<meta name="keywords" content="">
		<!-- meta character set -->
		<meta charset="UTF-8">
		<!-- Site Title -->
		<title>Job Listing</title>

		<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
			<!--
			CSS
			============================================= -->
			<link rel="stylesheet" href="/static/css/linearicons.css">
			<link rel="stylesheet" href="/static/css/font-awesome.min.css">
			<link rel="stylesheet" href="/static/css/bootstrap.css">
			<link rel="stylesheet" href="/static/">
			<link rel="stylesheet" href="/static/css/nice-select.css">					
			<link rel="stylesheet" href="/static/css/animate.min.css">
			<link rel="stylesheet" href="/static/css/owl.carousel.css">
			<link rel="stylesheet" href="/static/css/main.css">
		</head>
		<body>

             {% include 'header.tmp' %}

			<!-- start banner Area -->
			<section style="background: url({{ blog.image.url }}) center no-repeat !important; background-size:cover" class="banner-area relative" id="home">	
				<div class="overlay overlay-bg-blog"></div>
				<div class="container">
					<div class="row d-flex align-items-center justify-content-center">
						<div class="blog-content about-content col-lg-12">
							<h1 class="text-white">
								{{ blog.title | title }}			
							</h1>	
						</div>											
					</div>
				</div>
			</section>
			<!-- End banner Area -->	
			
			
			<!-- Start blog-posts Area -->
			<section class="blog-posts-area section-gap">
				<div class="container">
					<div class="row">
						<div class="col-lg-8 post-list blog-post-list">
							<div class="single-post">
								<!-- <img class="img-fluid" src="{{ blog.image.url }}" alt=""> -->
								<ul class="tags">
                                    {% for blog_category in blog.categories.all %}
                                    <li><a href="#">{{ blog_category }}</a></li>
                                    {% endfor %}
								</ul>
								<div class="sharethis-inline-share-buttons"></div>
								<a href="#">
									<h1>
										{{ blog.title }}
									</h1>
								</a>
								<div class="content-wrap">
									{{ blog.content|safe|linebreaksbr}}

								</div>

                           


							</div>																		
						</div>
						{% include 'blog_sidebar.tmp' %}
					</div>
				</div>	
			</section>
			<!-- End blog-posts Area -->
			
			{% include 'footer.tmp' %}
			
			<script type='text/javascript' src='//platform-api.sharethis.com/js/sharethis.js#property=5cafd752918ee80012120691&product=inline-share-buttons' async='async'></script>
			
		</body>
	</html>
