<html lang="zxx" class="no-js">
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="codepixer">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Job Listing</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
		<!--
		CSS
		============================================= -->
		<link rel="stylesheet" href="/static/css/linearicons.css">
		<link rel="stylesheet" href="/static/css/font-awesome.min.css">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/magnific-popup.css">
		<link rel="stylesheet" href="/static/css/nice-select.css">					
		<link rel="stylesheet" href="/static/css/animate.min.css">
		<link rel="stylesheet" href="/static/css/owl.carousel.css">
		<link rel="stylesheet" href="/static/css/main.css">
	</head>
	<body>

		<!-- header temp -->
			{% include 'header.tmp' %}
		<!-- header temp END -->

		<!-- start banner Area -->
        <div class="page-section cs-page-sec about-header">
                    <!-- Container Start -->
            <div class="container "> 
                <div class="row">
                    <div class="section-fullwidth col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                
                                <div class="cs-heading">
                                    <h1 style="color:#ffffff !important; font-size: 50px !important; font-weight:  !important; letter-spacing: 2px !important; line-height: 80px !important; text-align:Center; font-style:normal;">
                                        JOB ALERTS
                                    </h1>
                                    
                                    
                                    <div class="spliter-medium"></div>
                                </div>
                            </div>
                        </div>
                    </div>			    
                </div>
            </div>
        </div>


    <div class="page-section cs-page-sec cs-page-sec-solid ">
            <!-- Container Start -->
        <div class="container "> 
            <div class="row">
                <div class="section-fullwidth col-lg-12 col-md-12 col-sm-12 col-xs-12 ">
                    <div class="row">
                        <div class=" col-sm-5 col-xs-12">
                            <div class="cs-element-title">
                                <div class="section-inner">
                                    <h2>Get Free Job Alerts in Your Email â€“ Subscribe Now.</h2>
                                </div>
                            </div>

                            <div class="text-justify">
                                <br>
                                receive job alerts in your Email for FREE. 
                                <br>

                           
                            </div>

                        </div>

                        <div style="border-left:solid 3px #55a747;" class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                            <div class="form-wrap">
                                {% if err %}
                                    <div class="text-danger"> {{ err }} </div>
                                {% endif %}

                                {% if suc %}
                                    <div class="text-success">{{ suc }} </div>
                                {% endif %}
                                <form method="POST" action="/jobalerts/">
                                {% csrf_token %}
                                <div class="image-frame cs-img-frame">
                                    <div class="form-group">
                                        <label>Full Name </label>
                                        {{ jobAlertForm.full_name }}
                                    </div>

                                    <div class="form-group">
                                        <label>Email  </label>
                                        {{ jobAlertForm.email }}
                                    </div>

                                    <button class="btn" style="background:#55a747;color: white;" type="submit">Get Job Alert</button>

                                </div>
                            </form>

                            </div>
                        </div>
                    </div>
                </div>			    
            </div>
        </div>
    </div>
            


	

		<!-- start footer Area -->		
	{% include 'footer.tmp' %}	
