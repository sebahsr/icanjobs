<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="codepixer">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Job Listing</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
		<!--
		CSS
		============================================= -->
		<link rel="stylesheet" href="/static/css/linearicons.css">
		<link rel="stylesheet" href="/static/css/font-awesome.min.css">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/magnific-popup.css">
		<link rel="stylesheet" href="/static/css/nice-select.css">					
		<link rel="stylesheet" href="/static/css/animate.min.css">
		<link rel="stylesheet" href="/static/css/owl.carousel.css">
		<link rel="stylesheet" href="/static/css/main.css">
	</head>
	<body>

		<!-- header temp -->
			{% include 'header.tmp' %}
		<!-- header temp END -->

		<!-- start banner Area -->
		<section class="banner-area relative" id="home">	
				<div class="overlay overlay-bg"></div>
				<div class="container">
					<div class="row search-page-top d-flex align-items-center justify-content-center">
						<div class="banner-content col-lg-12">
							<h1 class="text-white">
								Search Jobs				
							</h1>
							<p class="text-white link-nav">
								<a href="index.html">Home </a> <span class="lnr lnr-arrow-right"></span> <a href="/jobs/"> Jobs</a>
							</p>	
							<form class="serach-form-area" action="/jobs/search/" method="GET">
								<div class="row justify-content-center form-wrap">
									<div class="col-lg-4 form-cols">
										<input type="text" class="form-control" name="q" placeholder="what are you looking for?">
									</div>
									<div class="col-lg-2 form-cols">
										<div class="default-select" id="default-selects"">
											<select name='reg'>
												<option value="all">All Regions</option>
												{% for region in regions %}
													<option value="{{ region.pk }}">{{ region.name }}</option>
												{% endfor %}
											</select>
										</div>
									</div>
									<div class="col-lg-2 form-cols">
										<div class="default-select" id="default-selects2">
											<select name='cat'>
												<option value="all">All Category</option>
												{% for category in categories %}
													<option value="{{ category.pk }}">{{ category.name }}</option>
												{% endfor %}
											</select>
										</div>										
									</div>

									<div class="col-lg-2 form-cols">
											<div class="default-select" id="default-selects2">
												<select name='status'>
													<option value="all">All Status</option>
													{% for job_status in job_statuses %}
														<option value="{{ job_status.0}}">{{ job_status.1 }}</option>
													{% endfor %}
												</select>
											</div>										
									</div>
									<div class="col-lg-2 form-cols">
									    <button type="submit" class="btn btn-info">
									      <span class="lnr lnr-magnifier"></span> Search
									    </button>
									</div>								
								</div>
							</form>
							{% if search_result_count is not None and search_result_count >= 0 and search_query %}
							<p class="text-white">{{ search_result_count }} Results found for <span>"{{ search_query }}"</span></p>
							{% endif %}
						</div>											
					</div>
				</div>
			</section>
			<!-- End banner Area -->	
			<section class="feature-cat-area pt-100" id="category">
					<div class="container">
						<div class="row d-flex justify-content-center">
							<div class="menu-content pb-60 col-lg-10">
								<div class="title text-center">
									<h1 class="mb-10">Featured Job Categories</h1>
									<p>Categories with the most open jobs.</p>
								</div>
							</div>
						</div>						
						<div class="row">
							{% for featured_category in featured_categories %}
								<div class="col-lg-2 col-md-4 col-sm-6">
									<div class="single-fcat">
										<div class='h5'> <a href='/jobs/category-{{ featured_category.pk }}/'>{{ featured_category.name|title }} </a></div>
										<p>{{ featured_category.job_count }} Open Jobs</p>
									</div>
								</div>
							{% endfor %}																											
						</div>
					</div>	
				</section>

		<!-- Start post Area -->
		<section class="post-area section-gap">
			<div class="container">
				<div class="row justify-content-center d-flex">
					<div class="col-lg-8 post-list">
						{% for job in jobs %}
							<div class="single-post d-flex flex-row">
								<div class="thumb col-sm-4">
									<img style="max-width: 100px" src="{{ job.company.profile_pic.url }}" alt="">
									
									<ul class="tags">
										{% for category in job.categories.all %}
											<li>
												<a href="/jobs/category-{{ job.id }}/">{{ category.name }}</a>
											</li>
										{% endfor %}
									</ul>
								</div>
								<div class="details col-sm-7 col-sm-offset-1">
									<div class="title d-flex flex-row justify-content-between">
										<div class="titles">
											<a href="/jobs/job-{{ job.id }}/"><h4>{{ job.title }}</h4></a>
											<h6> <a href='/companies/company-{{ job.company.pk }}/'>{{ job.company.name }} </a></h6>					
										</div>
										<ul class="btns">
											
											<li><a href="/jobs/job-{{ job.id }}/"> <span class="lnr lnr-eye"></span> View Detail</a></li>
										</ul>
									</div>
									<p>
										<span class="fa fa-star"></span> Region : <a href='/jobs/region-{{ job.region.id }}/'>{{ job.region.name }}</a>
									</p>
									
									<p class="address"><span class="fa fa-user-plus"></span> {{ job.position}}</p>
									<p class="address"> {{ job.summary|truncatechars:100 }}</p>
									
								</div>
							</div>	
						{% empty %}
							<div class="h3"> 
								No jobs Found 
							</div>
						{% endfor %}

						{% if current_page.has_previous %}
						<a href="?page={{ current_page.previous_page_number }}" class="genric-btn info-border circle arrow">Previous<span class="lnr lnr-arrow-left"></span></a>
						{% endif %}

						{% if current_page.has_next %}
							<a href="?page={{ current_page.next_page_number }}" class="genric-btn info-border circle arrow">Next<span class="lnr lnr-arrow-right"></span></a>
						{% endif %}
						</div>
					

					<!-- sidebar -->
					{% include 'jobs_sidebar.tmp' %}
					<!-- End side bar -->
					
				</div>
			</div>	
		</section>
		<!-- End post Area -->

		{% include 'join_us_section.tmp' %}		
	
		<!-- start footer Area -->		
	{% include 'footer.tmp' %}	
	</body>
</html>



