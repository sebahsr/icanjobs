
					<div class="col-lg-4 sidebar">
                            <div class="single-slidebar">
                                <h4>Recent Jobs</h4>
                                {% if recent_jobs.count > 1 %}
                                    <div class="active-relatedjob-carusel">
                                {% else %}
                                    <div>
                                {% endif %}
                                    {% for recent_job in recent_jobs %}
                                    <div class="single-rated">
                                        <img class="img-fluid" src="{{ recent_job.company.profile_pic.url }}" alt="">
                                        <a href="/jobs/job-{{ recent_job.pk }}"><h4>{{ recent_job.title }}</h4></a>
                                        <h6> <a href='/companies/company-{{ recent_job.company.id }}'>{{ recent_job.company.name }} </a></h6>
                                        <p>
                                            {{ recent_job.summary|truncatechars:300}}
                                        </p>
                                        <p class="address">Job Nature: {{ recent_job.employement_type.name }}</p>
                                        <p class="address"><span class="lnr lnr-database"></span> Region :  {{ recent_job.region }}</p>
                                        <a href="/jobs/job-{{ recent_job.pk }}" class="btns text-uppercase">View Detail</a>
                                    </div>
                                    {% endfor %}																	
                                </div>
                            </div>
                            
                            <div class="single-slidebar">
                                <h4>Jobs by Region</h4>
                                <ul class="cat-list">
                                    {% for region in regions  %}
                                        <li><a class="justify-content-between d-flex" href="/jobs/region-{{ region.pk}}/"><p>{{ region.name }}</p><span>{{region.jobs.count }}</span></a></li>
                                    
                                    {% endfor %}
                                   </ul>
                            </div>					
    
                            <div class="single-slidebar">
                                <h4>Jobs by Sectors</h4>
                                <ul class="cat-list">
                                    {% for category in categories %}
                                        <li><a class="justify-content-between d-flex" href="/jobs/category-{{category.pk}}"><p>{{ category.name }}</p><span>{{ category.job_count }}</span></a></li>
                                    {% endfor %}
                                    </ul>
                            </div>
    
                            <div class="single-slidebar">
                                <h4>Carrer Advice Blogs</h4>
                                <div class="blog-list">
                                    {% for blog in recent_blogs %}
                                    <div class="single-blog " style="background:#000 url(img/blog1.jpg);">
                                        <a href="/blogs/blog-{{ blog.pk }}/">
                                            <h4>{{ blog.title }}<br>
                                       
                                        <div class="meta justify-content-between d-flex">
                                            <p>
                                                {{ blog.created_at }}
                                            </p>
                                        </div>
                                    </div>	
                                    {% endfor %}																	
                                </div>
                            </div>							
    
                        </div>