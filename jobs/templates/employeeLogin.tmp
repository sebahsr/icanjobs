<!doctype html>
<html class="fixed">
	{% include 'admin/admin.header.tmp' %}

	<body>
		<!-- start: page -->
		<section class="body-sign">
			<div class="center-sign">
				<a href="/" class="logo pull-left">
					<img src="/static/img/logo.png" height="54" alt="Porto Admin" />
				</a>

				<div class="panel panel-sign">
					<div class="panel-title-sign mt-xl text-right">
						<h2 class="pb-5 title active text-uppercase  m-none"><i class="fa fa-user mr-xs"></i> Job Seeker Sign In</h2>
						<a href='/company/admin/login/'><h2 class="title text-uppercase  m-none"><i class="fa fa-user mr-xs"></i> Employer Sign In</h2></a>
					
					</div>
					<div class="panel-body">
							<div style="color:#333" class=" ml-lg mr-lg h2">Login as Job Seeker </div>


						{% if err %}
							<div class="mb-xs ml-lg mr-lg alert alert-danger">
								<button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
								<strong>Faild to login!</strong> Please Try again.
							</div>
						{% endif %}
						{% if next_url %}
					<form action="/login/?next={{next_url}}" method="post">
					{% else %}
					<form action="/login/" method="post">

					{% endif %}

						
							{% csrf_token %}
							<div class="mb-xs ml-lg mr-lg form-group mb-lg">
								<label>Username</label>
								<div class="input-group input-group-icon">
									
									<input name="username" type="text" placeholder="Username" autocomplete="off" class="form-control input-lg" />
									<span class="input-group-addon">
										<span class="icon icon-lg">
											<i class="fa fa-user"></i>
										</span>
									</span>
								</div>
							</div>

							<div class="mb-xs ml-lg mr-lg form-group mb-lg">
								
								<div class="input-group input-group-icon">
									<input name="password"  placeholder="Password" type="password" class="form-control input-lg" />
									<span class="input-group-addon">
										<span class="icon icon-lg">
											<i class="fa fa-lock"></i>
										</span>
									</span>
								</div>
							</div>

							<div class="row">
								<div class="col-sm-6">
									<div class="checkbox-custom checkbox-default mb-xs ml-lg mr-lg">
										<input id="RememberMe" name="rememberme" type="checkbox"/>
										<label for="RememberMe">Keep me signed in</label>
									</div>
								</div>
								<div class="col-sm-6">
									<div class="checkbox-custom checkbox-default mb-xs ml-lg mr-lg">
										<a href='#'>Forgot Password?</a>
									</div>
								</div>
								
								<div class="col-sm-12 text-right">
									<button type="submit" class="mb-xs ml-lg mr-lg btn-block btn btn-primary">Sign In</button>
								</div>
							</div>

                            <span class="mt-lg mb-lg line-thru text-center text-uppercase">
                                    <span>or</span>
                                </span>
    
                                <div class="mb-xs text-center">
                                    <a href="{% url 'social:begin' 'facebook' %}" class="col-xs-12 btn btn-facebook mb-xs ml-lg mr-lg"> Sign in with <i class="fa fa-facebook"></i></a>
                                    <a href="{% url 'social:begin' 'google-oauth2' %}" class="col-xs-12 btn btn-gplus mb-xs ml-lg mr-lg"> Sign in with <i class="fa fa-google"></i> </a>
                                </div>
    
							<p class="text-center h5">New to iCAN? <a href="/signup/">Join us today.</a>

						</form>
					</div>
				</div>

				<p class="text-center text-muted mt-md mb-md">iCan &copy; Copyright 2018. All rights reserved.</p>
			</div>
		</section>
		
	{% include 'admin/admin.footer.tmp' %}