<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="codepixer">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Job Listing</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
		<!--
		CSS
		============================================= -->
		<link rel="stylesheet" href="/static/css/linearicons.css">
		<link rel="stylesheet" href="/static/css/font-awesome.min.css">
		<link rel="stylesheet" href="/static/css/fontawesome.pro.css">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/magnific-popup.css">
		<link rel="stylesheet" href="/static/css/nice-select.css">					
		<link rel="stylesheet" href="/static/css/animate.min.css">
		<link rel="stylesheet" href="/static/css/owl.carousel.css">
		<link rel="stylesheet" href="/static/css/main.css">
	</head>
	<body>

		 {% include 'header.tmp' %}


		<!-- start banner Area -->
		<section class="banner-area relative" id="home">	
			<div class="overlay overlay-bg"></div>
			<div class="container">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="about-content col-lg-12">
						<h1 class="text-white">
							Job Details				
						</h1>	
						<p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span> <a href="/jobs/">Jobs</a>  <span class="lnr lnr-arrow-right"></span>  <a href=""> Job Details</a></p>
					</div>											
				</div>
			</div>
		</section>
		<!-- End banner Area -->
		
		<!-- Start post Area -->
		<section class="post-area section-gap">
			<div class="container">
				<div class="row justify-content-center d-flex">
					<div class="col-lg-8 post-list">
						<div class="single-post d-flex flex-row">
							<div class="thumb col-sm-4">
								<img style="max-width: 100px" src="{{ job.company.profile_pic.url }}" alt="">
								<br /><br />
								
								<p class="address"><span class="fa fa-external-link"></span> <a href='{{ job.company.website }}'>{{ job.company.website }}</a></p>
								<p class="address"><span class="fa fa-envelope"></span> <a href='mailto:{{ job.company.user.email }}'>{{ job.company.user.email }}</a></p>
								<p class="address"><span class="fa fa-phone"></span> {{ job.company.phone }}</p>

							</div>
							<div class="details col-sm-8">
								<div class="title d-flex flex-row justify-content-between">
									<div class="titles">
										<a href="/companies/company-{{job.company.pk}}/"><h4>{{ job.company.name | title }}</h4></a>					
									</div>
									
								</div>

								<p class="address"><span class="fa fa-map-marker"></span> {{ job.company.city }}, {{ job.company.region.name }}</p>
								<p>
									{{ job.company.brief_description|truncatechars:400 }}
								</p>
							</div>
						</div>	

						<div class="single-post d-flex flex-row">
								<div class="thumb col-sm-4">
									<ul class="tags">
										{% for category in job.categories.all %}
										<li>
											<a href="#">{{category.name }}</a>
										</li>
										{% endfor %}
									</ul>
								</div>
								<div class="details col-sm-8">
									<div class="title d-flex flex-row justify-content-between">
										<div class="titles">
											<a href="#"><h4>{{ job.title }}</h4></a>					
										</div>
										{% if job.eligible_to_apply %}
										<ul class="btns">
											{% if job.applied_already %}

											<li class='bg-info text-white'><span class="fa fa-check-square"></span> Applied</li>
											{% else %}
											<li><a href="/jobs/applly/job-{{ job.pk }}/"><span class="lnr lnr-send"></span>Apply</a></li>
											{% endif %}
										</ul>
										{% endif %}
									</div>
									
									<h5></h5>
									
									<table class="table">
										<tr><th><span class="text-info fa fa-project-diagram"></span>Employement Type </th><td> {{ job.employement_type.name }}</td></td></tr>
										<tr><th><span class="text-info fa fa-dollar-sign"></span> Salary  </th><td> 
										{% if job.salary %}
											{{ job.salary }} ETB
										{% else %}
											Unpaid
										{% endif %}
										
										</td></td></tr>
										<tr><th><span class="text-info fa fa-desktop-alt"></span> Position Title </th><td> 
											
											{% if job.position %}
												{{ job.position }}
											{% else %}
												Not Specified
											{% endif %}
										</td></td></tr>
										<tr><th><span class="text-info fa fa-desktop-alt"></span> Career Level </th><td> {{ job.level }}</td></td></tr>
										<tr><th><span class="text-info fa fa-desktop-alt"></span> Department </th><td> 
										{% if job.department %}
											{{ job.department }}
										{% else %}
											Not Specified
										{% endif %}
										</td></td></tr>
										{% if job.deadline %}
										<tr><th><span class="text-info fa fa-calendar-check"></span> Deadline  </th><td> {{ job.deadline }}</td></td></tr>
										{% else %}
											Not Specified
										{% endif %}
										<tr><th><span class="text-info fa fa-users-class"></span> Number Of Positions  </th><td> 
										{% if job.number_of_candidates %}
											{{ job.number_of_candidates }} candiates
										{% else %}
											No Specified
										{% endif %}

										</td></td></tr>
										<tr><th><span class="text-info fa fa-map-marker"></span> Duty Station (Location)  </th><td>  {{ job.city }}, {{ job.region.name }}</td></td></tr>
									</table>
								</div>
						</div>	
						{% if job.summary %}
						<div class="single-post job-details">
							<h4 class="single-title">Role Overview/Job Duties</h4>
							<p>
								{{ job.summary|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.responsibilities %}
						<div class="single-post job-details">
								<h4 class="single-title">Job Duties and Responsibilities</h4>
								<p>
									{{ job.responsibilities|linebreaksbr }}
								</p>
						</div>
						{% endif %}
						{% if job.experience %}
						<div class="single-post job-details">
							<h4 class="single-title">Education And Experience</h4>
							<p>
								{{ job.experience|linebreaksbr }}
							</p>
						</div>
						{% endif %}
						{% if job.requirements %}
						<div class="single-post job-experience">
							<h4 class="single-title">Key Requirements</h4>
							<p>
								{{ job.requirements|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.knowledge_skills %}
						<div class="single-post job-experience">
							<h4 class="single-title">Knowledge And Skills</h4>
							<p>
								{{ job.knowledge_skills|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.how_to_apply %}
						<div class="single-post job-experience">
							<h4 class="single-title">How To Apply</h4>
							<p>
								{{ job.how_to_apply|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.eligible_to_apply %}
							{% if not job.applied_already %}
								<div class="single-post job-experience">
									<div class="row d-flex justify-content-center">
										<div class="menu-content col-lg-9">
											<div class="title text-center">
												<h1 class="mb-10 text-black">Apply through iCAN jobs</h1>
												<a class="btn btn-info" href="/jobs/applly/job-{{ job.pk }}/"><i class='fa fa-send'></i> Apply Now</a>
											</div>
										</div>
									</div>	
								</div>	
							{% endif %}
						{% endif %}


					</div>

					<!-- sidebar -->
					{% include 'jobs_sidebar.tmp' %}
					<!-- End side bar -->
				</div>
			</div>	
		</section>
		<!-- End post Area -->


		<!-- Start callto-action Area -->
		
        {%  include 'join_us_section.tmp' %}
		<!-- End calto-action Area -->

	{% include 'footer.tmp' %}	
	</body>
</html>



