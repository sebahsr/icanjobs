<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="codepixer">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>Job Listing</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
		<!--
		CSS
		============================================= -->
		<link rel="stylesheet" href="/static/css/linearicons.css">
		<link rel="stylesheet" href="/static/css/font-awesome.min.css">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/magnific-popup.css">
		<link rel="stylesheet" href="/static/css/nice-select.css">					
		<link rel="stylesheet" href="/static/css/animate.min.css">
		<link rel="stylesheet" href="/static/css/owl.carousel.css">
		<link rel="stylesheet" href="/static/css/main.css">
	</head>
	<body>

		 {% include 'header.tmp' %}


		<!-- start banner Area -->
		<section class="banner-area relative" id="home">	
			<div class="overlay overlay-bg"></div>
			<div class="container">
				<div class="row d-flex align-items-center justify-content-center">
					<div class="about-content col-lg-12">
						<h1 class="text-white">
							Job Details				
						</h1>	
						<p class="text-white link-nav"><a href="index.html">Home </a>  <span class="lnr lnr-arrow-right"></span> <a href="/jobs/">Jobs</a>  <span class="lnr lnr-arrow-right"></span>  <a href=""> Job Details</a></p>
					</div>											
				</div>
			</div>
		</section>
		<!-- End banner Area -->
		
		<!-- Start post Area -->
		<section class="post-area section-gap">
			<div class="container">
				<div class="row justify-content-center d-flex">
					<div class="col-lg-8 post-list">
						<div class="single-post d-flex flex-row">
							<div class="thumb col-sm-4">
								<img style="max-width: 100px" src="{{ job.company.profile_pic.url }}" alt="">
								<br /><br />
								<h5><a href='/companies/company-{{job.company.pk}}/'><u>{{ job.company.name|title}}</u></a></h5>

								<p class="address"><span class="fa fa-external-link"></span> <a href='{{ job.company.website }}'>{{ job.company.website }}</a></p>
								<p class="address"><span class="fa fa-envelope"></span> {{ job.company.user.email }}</p>
								<p class="address"><span class="fa fa-phone"></span> {{ job.company.phone }}</p>

							</div>
							<div class="details col-sm-8">
								<div class="title d-flex flex-row justify-content-between">
									<div class="titles">
										<a href="#"><h4>Company Profile</h4></a>					
									</div>
									
								</div>

								<p class="address"><span class="lnr lnr-map"></span> {{ job.company.city }}, {{ job.company.region.name }}</p>
								<p>
									{{ job.company.brief_description }}
								</p>
							</div>
						</div>	

						<div class="single-post d-flex flex-row">
								<div class="thumb col-sm-4">
									<ul class="tags">
										{% for category in job.categories.all %}
										<li>
											<a href="#">{{category.name }}</a>
										</li>
										{% endfor %}
									</ul>
								</div>
								<div class="details col-sm-8">
									<div class="title d-flex flex-row justify-content-between">
										<div class="titles">
											<a href="#"><h4>{{ job.title }}</h4></a>
											<h6>{{ job.company.name|title}}</h6>					
										</div>
										<ul class="btns">
											{% if job.applied_already %}

											<li class='bg-info text-white'><span class="fa fa-check-square"></span> Applied</li>
											{% else %}
											<li><a href="/jobs/applly/job-{{ job.pk }}/"><span class="lnr lnr-send"></span>Apply</a></li>
											{% endif %}
										</ul>
									</div>
									<p>
										{{ job.company.brief_description }}
									</p>
									<h5>Job Nature: {{ job.employement_type.name }}</h5>
									<p class="address"><span class="lnr lnr-envelope"></span> Salary : {{ job.salary }} ETB</p>
									<p class="address"><span class="lnr lnr-database"></span> Position : {{ job.position }}</p>
									<p class="address"><span class="lnr lnr-calendar-full"></span> Deadline : {{ job.deadline }}</p>
									<p class="address"><span class="lnr lnr-database"></span> Number Of Candidates : {{ job.status }} candiates</p>
									<p class="address"><span class="lnr lnr-location"></span> Location :  {{ job.city }}, {{ job.region.name }}</p>
								</div>
						</div>	

						<div class="single-post job-details">
							<h4 class="single-title">Job Summary</h4>
							<p>
								{{ job.summary|linebreaksbr }}
							</p>
						</div>
						<div class="single-post job-experience">
							<h4 class="single-title">Experience Requirements</h4>
							<p>
								{{ job.requirements|linebreaksbr }}
							</p>
						</div>
						
						<div class="single-post job-experience">
								<h4 class="single-title">Applicants</h4>
								<p>
									{% for applicant in job.applicants.all %}
										<div class=''>
											<div class='h5'>
												<img src="/static/img/pages/list.jpg" alt="">
												<a href='/employee/employee-{{ applicant.pk}}/'>{{ applicant.user.first_name }} {{ applicant.user.last_name }}</a>
											</div>
										</div>
									{% endfor %}
								</p>
						</div>

					</div>
					<!-- sidebar -->
						{% include 'jobs_sidebar.tmp' %}
					<!-- End side bar -->
				</div>
			</div>	
		</section>
		<!-- End post Area -->


		<!-- Start callto-action Area -->
		
        {%  include 'join_us_section.tmp' %}
		<!-- End calto-action Area -->

		<!-- start footer Area -->		
		<footer class="footer-area section-gap">
			<div class="container">
				<div class="row">
					<
					
											
				</div>

				<div class="row footer-bottom d-flex justify-content-between">
					<p class="col-lg-8 col-sm-12 footer-text m-0 text-white">
						<!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
Copyright &copy; 2019 Ican. All rigths reserved. <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
					</p>
					<div class="col-lg-4 col-sm-12 footer-social">
						<a href="#"><i class="fa fa-facebook"></i></a>
						<a href="#"><i class="fa fa-twitter"></i></a>
						<a href="#"><i class="fa fa-dribbble"></i></a>
						<a href="#"><i class="fa fa-behance"></i></a>
					</div>
				</div>
			</div>
		</footer>
		<!-- End footer Area -->		

		<script src="/static/js/vendor/jquery-2.2.4.min.js"></script>
		<script src="/static/https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
		<script src="/static/js/vendor/bootstrap.min.js"></script>			
		<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBhOdIF3Y9382fqJYt5I_sswSrEw5eihAA"></script>
		  <script src="/static/js/easing.min.js"></script>			
		<script src="/static/js/hoverIntent.js"></script>
		<script src="/static/js/superfish.min.js"></script>	
		<script src="/static/js/jquery.ajaxchimp.min.js"></script>
		<script src="/static/js/jquery.magnific-popup.min.js"></script>	
		<script src="/static/js/owl.carousel.min.js"></script>			
		<script src="/static/js/jquery.sticky.js"></script>
		<script src="/static/js/jquery.nice-select.min.js"></script>			
		<script src="/static/js/parallax.min.js"></script>		
		<script src="/static/js/mail-script.js"></script>	
		<script src="/static/js/main.js"></script>	
	</body>
</html>



