<!DOCTYPE html>
<html lang="zxx" class="no-js">
<head>
	<!-- Mobile Specific Meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<!-- Favicon-->
	<link rel="shortcut icon" href="img/fav.png">
	<!-- Author Meta -->
	<meta name="author" content="codepixer">
	<!-- Meta Description -->
	<meta name="description" content="">
	<!-- Meta Keyword -->
	<meta name="keywords" content="">
	<!-- meta character set -->
	<meta charset="UTF-8">
	<!-- Site Title -->
	<title>{{ job.title }}</title>

	<link href="https://fonts.googleapis.com/css?family=Poppins:100,200,400,300,500,600,700" rel="stylesheet"> 
		<!--
		CSS
		============================================= -->
		<link rel="stylesheet" href="/static/css/linearicons.css">
		<link rel="stylesheet" href="/static/css/font-awesome.min.css">
		<link rel="stylesheet" href="/static/css/fontawesome.pro.css">
		<link rel="stylesheet" href="/static/css/bootstrap.css">
		<link rel="stylesheet" href="/static/css/magnific-popup.css">
		<link rel="stylesheet" href="/static/css/nice-select.css">					
		<link rel="stylesheet" href="/static/css/animate.min.css">
		<link rel="stylesheet" href="/static/css/owl.carousel.css">
		<link rel="stylesheet" href="/static/css/main.css">
	</head>
	<body>

		 {% include 'header.tmp' %}


		<!-- start banner Area -->
		<section class="job-detail-banner-area relative" id="home">	
			<div class="overlay overlay-bg"></div>
			<div class="container">
				<div class="row d-flex ">
					<div class="job-detail-content col-lg-12">
							<div class="page-header-title single-title text-white">{{ job.title }}	</div>
							
					</div>											
				</div>
			</div>
		</section>
		<!-- End banner Area -->
		
	
		<!-- Start post Area -->
		<section class="post-area section-gap">
			
			<div class="container">
				<div class="row justify-content-center d-flex">
					<div class="col-lg-7 post-list">
						
						<section class="pb-5">				
										<div class="row single-post-detail-job d-flex flex-row">
											<div class="col-sm-3">
												<img style="width:100%" class="img img-responsive" src="{{ job.company.profile_pic.url }}" />
											</div>
											<div class="col-sm-1"></div>
											<div class="details col-sm-8 ">
												
												<div class="title d-flex flex-row justify-content-between">
													<div class="titles pb-2">
														<a href="/companies/company-{{job.company.pk}}/"><h4>{{ job.company.name | title }}</h4></a>					
													</div>
													
												</div>
												{% if  job.company.brief_description %}
												<p>
													{{ job.company.brief_description|truncatechars:100 }}
												</p>
												{% endif %}

												<span class="contact-info"><span class="fa fa-map-marker"></span> {{ job.company.city }}, {{ job.company.region.name }}</span><br/>
												{% if job.company.user.email %}
												<span class="contact-info"><span class="fa fa-envelope"></span> {{ job.company.user.email }}</span><br/>
												{% endif %}

												{% if job.company.phone %}
												<span class="contact-info"><span class="fa fa-phone"></span> {{ job.company.phone }}</span><br/>
												{% endif %}

											</div>
										</div>
										<hr />

						</section>

						{% if job.summary %}
						<div class="single-post-detail-job job-details">
							<div class="pt-2 single-title-job-detail">Role Overview/Job Duties</div>
							<p>
								{{ job.summary|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.responsibilities %}
						<div class="single-post-detail-job job-details">
								<h4 class="pt-2 single-title-job-detail">Job Duties and Responsibilities</h4>
								<p>
									{{ job.responsibilities|linebreaksbr }}
								</p>
						</div>
						{% endif %}
						{% if job.experience %}
						<div class="single-post-detail-job job-details">
							<h4 class="pt-2 single-title-job-detail">Education And Experience</h4>
							<p>
								{{ job.experience|linebreaksbr }}
							</p>
						</div>
						{% endif %}
						{% if job.requirements %}
						<div class="single-post-detail-job job-experience">
							<h4 class="pt-2 single-title-job-detail">Key Requirements</h4>
							<p>
								{{ job.requirements|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.knowledge_skills %}
						<div class="single-post-detail-job job-experience">
							<div class="pt-2 single-title-job-detail">Knowledge And Skills</div>
							<p>
								{{ job.knowledge_skills|linebreaksbr }}
							</p>
						</div>
						{% endif %}

						{% if job.how_to_apply and not job.applied_already %}
						<div class="single-post-detail-job job-experience">
							<h4 class="pt-2 single-title-job-detail">How To Apply</h4>
							<p>
								{{ job.how_to_apply|linebreaksbr }}
							</p>
							{% if job.application_link %}
								<a class='btn skill-tags' href='{{ job.application_link }}'>Click Here to Apply <i class='fa fa-forward'></i></a>
							{% endif %}
						</div>
						{% endif %}

						
						
					
						

					</div>

					<!-- sidebar -->
					<div class="col-lg-5">
							<div class="single-post-detail-job d-flex flex-row">

									<div class="details col-sm-10">
										<div class="pb-10">
											{% if job.eligible_to_apply %}
													{% if not job.applied_already %}
													<a class="btn skill-tags" href="/jobs/applly/job-{{ job.pk }}/"><i class='fa fa-send'></i> Apply Now</a>
					
													{% else %}
													<span class='btn btn-danger'><i class='fa fa-check-square'></i> Applied</a></span>
					
													{% endif %}
											{% endif %}
										</div>
										
										<div class="pt-2 single-title-job-detail">
											Job Detail
										</div>
										
										<h5></h5>
										
										<table class="table table-responsive">
											<tr><th><span class="fa fa-project-diagram"></span> Employement Type </th><td> {{ job.employement_type.name }}</td></td></tr>
											{% if job.salary %}
											<tr><th><span class="fa fa-dollar-sign"></span> Salary  </th><td> 
												{{ job.salary }} ETB
											</td></td></tr>

											{% elif not job.salary_unpaid %}
											<tr><th><span class="fa fa-dollar-sign"></span> Salary  </th><td> 
												Unpaid
											</td></td></tr>
											{% elif job.salary_unpaid %}
											<tr><th><span class="fa fa-dollar-sign"></span> Salary  </th><td> 
												Salary Not Specified
											</td></td></tr>
											{% endif %}
											
											
											<tr><th><span class="fa fa-desktop-alt"></span> Career Level </th><td> {{ job.level }}</td></td></tr>
											<tr><th><span class="fa fa-check-square"></span> Posted On </th><td> {{ job.created_at|date }}</td></td></tr>
											{% if job.department %}
											<tr><th><span class="fa fa-desktop-alt"></span> Department </th><td> 
										
											{{ job.department }}
											
											</td></td></tr>
											{% endif %}
	
											{% if job.deadline %}
											<tr><th><span class="fa fa-calendar-check"></span> Closing On  </th><td> {{ job.deadline }}</td></td></tr>
											
											{% endif %}
	
											{% if job.number_of_candidates %}
											<tr><th><span class="fa fa-users-class"></span> Number Of Positions  </th><td> 
											
												{{ job.number_of_candidates }} candiates
										
											</td></td></tr>
											{% endif %}
											<tr><th><span class="fa fa-map-marker"></span> Duty Station (Location)  </th><td>  {{ job.city }}, {{ job.region.name }}</td></td></tr>

										</table>
										{% if job.categories.all %}
										<h3>Tags</h3>
										<div class="thumb ">
												<ul class="tags">
													{% for category in job.categories.all %}
													<li>
														<a href="#">{{category.name }}</a>
													</li>
													{% endfor %}
												</ul>
											</div>
										{% endif %}
										
									</div>
									
							</div>
					</div>
					<!-- End side bar -->
				</div>
			</div>	
		</section>
		<!-- End post Area -->


		<!-- Start callto-action Area -->
		
        {%  include 'join_us_section.tmp' %}
		<!-- End calto-action Area -->

	{% include 'footer.tmp' %}
	
	<script type='text/javascript' src='//platform-api.sharethis.com/js/sharethis.js#property=5cafd752918ee80012120691&product=inline-share-buttons' async='async'></script>


	</body>
</html>



