<form method="POST" action="/employee/edit/general/">
    {% csrf_token %}
    <div class="mt-10">
            {{ userForm.first_name }}
    </div>

    <div class="mt-10">
            {{ userForm.last_name }}
    </div>

    <div class="mt-10">
            {{ userForm.username }}
    </div>


    <div class="input-group-icon  mt-10">
        <div class="icon"><i class="fa fa-envelope" aria-hidden="true"></i></div>
        {{ userForm.email }}
    </div>



    <div class="input-group-icon  mt-10">
        <div class="icon"><i class="fa fa-phone" aria-hidden="true"></i></div>
        {{ employeeForm.phone }}
    </div>


    <div class="input-group-icon  mt-10">
        <div class="icon"><i class="fa fa-map-marker" aria-hidden="true"></i></div>
        
        {{ employeeForm.city }}
    </div>    
    <div class="input-group-icon mt-10">
        <div class="icon"><i class="fa fa-globe" aria-hidden="true"></i></div>
        <div class="form-select" id="default-select">
            {{ employeeForm.region }}
        </div>
    </div>


    <div class="mt-10">
        {{ employeeForm.about_me }}
    </div>

    <div class="mt-10">
        <p><label>Profile Pic</label></p>
        {{ employeeForm.profile_pic }}
    </div>


    <div class='form-group'>
        <hr />
        <button type="submit" class="genric-btn primary-border">Save Changes</button>
    </div>

</form>
